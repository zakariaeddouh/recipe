{% extends 'base.html.twig' %}

{% block title %}
	SymRecipe - Mes ingrédients
{% endblock %}

{% block body %}
	<div class="container mt-4">
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}

		{% if not ingredients.items is same as([]) %}
			<h2>Mes ingrédients</h2>

			<a href="{{ path('ingredient_new') }}" class="btn btn-outline-primary">
				Créer un ingrédient
			</a>

			<div class="count mt-4">Il y a
				{{ ingredients.getTotalItemCount }}
				ingrédient(s)
			</div>

			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Numéro</th>
						<th scope="col">Nom</th>
						<th scope="col">Prix</th>
						<th scope="col">Date de création</th>
						<th scope="col">Edition</th>
						<th scope="col">Suppresion</th>
					</tr>
				</thead>
				<tbody>
					{% for ingredient in ingredients %}
						<tr class="table-light">
							<th scope="row">{{ ingredient.id }}</th>
							<td>{{ ingredient.name }}</td>
							<td>{{ ingredient.price|number_format(2, '.', ',') }}
								€</td>
							<td>{{ ingredient.createdAt|date('d/m/Y') }}</td>
							<td>
								<a href="{{ path('ingredient_edit', { id: ingredient.id }) }}" class="btn btn-outline-info">Modifier</a>
							</td>
							<td>
								<a href="{{ path('ingredient_delete', { id: ingredient.id }) }}" class="btn btn-outline-warning">Supprimer</a>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>

			<div class="navigation d-flex justify-content-center mt-4">
				{{ knp_pagination_render(ingredients) }}
			</div>
		{% else %}
			<h4>Il n'y a pas d'ingrédients</h4>

			<a href="{{ path('ingredient_new') }}" class="btn btn-outline-primary">
				Créer un ingrédient
			</a>
		{% endif %}
	</div>
{% endblock %}
